\begin_layout Section
Метод оценки максимального правдоподобия
\end_layout

\begin_layout Standard
Пусть 
\begin_inset Formula $\Pcal_{\xi}(\boldsymbol{\theta}),\ \boldsymbol{\theta}=\left(\theta_{1},\ldots,\theta_{r}\right)^{\T}$
\end_inset

 --- параметрическая модель.
\end_layout

\begin_layout Definition*

\emph on
Функция правдоподобия:
\emph default

\begin_inset Formula 
\[
\L(\boldsymbol{\theta}\mid\mathbf{y})=\P(\mathbf{y}\mid\boldsymbol{\theta})=\begin{cases}
\P_{\boldsymbol{\theta}}(x_{1}=y_{1},\ldots,x_{n}=y_{n}) & \Pcal_{\xi}(\boldsymbol{\theta})\text{ дискретно};\\
p_{\boldsymbol{\theta}}(\mathbf{y}) & \Pcal_{\xi}(\boldsymbol{\theta})\text{ абсолютно непрерывно.}
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Example
Пусть 
\begin_inset Formula $\xi\sim\N(\mu,\sigma^{2})$
\end_inset

.
 По независимости 
\begin_inset Formula $x_{i}$
\end_inset

, 
\begin_inset Formula $p_{\boldsymbol{\theta}}(\mathbf{x})$
\end_inset

 распадается в произведение: 
\begin_inset Formula 
\[
\L(\boldsymbol{\theta}\mid\mathbf{x})=p_{\boldsymbol{\theta}}(\mathbf{x})=\prod_{i=1}^{n}p_{\boldsymbol{\theta}}(x_{i})=\prod_{i=1}^{n}\frac{1}{\sqrt{2\pi}\sigma}\exp\left\{ -\frac{(x_{i}-\mu)^{2}}{2\sigma^{2}}\right\} =\frac{1}{\left(2\pi\right)^{n/2}\sigma^{n}}\exp\left\{ -\frac{1}{2\sigma^{2}}\sum_{i=1}^{n}(x_{i}-\mu)^{2}\right\} .
\]

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Example
\begin_inset Formula $\xi\sim\Pois(\lambda)$
\end_inset

, 
\begin_inset Formula 
\[
\P(\xi=k)=\frac{\lambda^{k}}{k!}e^{-\lambda}\implies\L(\boldsymbol{\theta}\mid\mathbf{x})=\prod_{i=1}^{n}\frac{1}{x_{i}!}\lambda^{x_{i}}e^{-\lambda}=\frac{1}{\prod_{i=1}^{n}x_{i}!}\lambda^{n\bar{\mathbf{x}}}e^{-n\lambda}.
\]

\end_inset


\end_layout

\begin_layout Claim*
Пусть 
\begin_inset Formula $\mathbf{x}$
\end_inset

 --- выборка.
 В качестве оценки максимального правдоподобия
