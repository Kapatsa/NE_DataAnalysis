\[
R^{2}(\eta,\xi_{1},\ldots,\xi_{k}):=1-\frac{\min_{\hat{\eta}\in\mathcal{M}}\E\left(\eta-\hat{\eta}\right)^{2}}{\D\eta}.
\]

\end_inset


\end_layout

