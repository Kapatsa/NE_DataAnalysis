\begin_layout Itemize
Пусть 
\begin_inset Formula $\sigma^{2}$
\end_inset

 известно.
 Свяжем 
\begin_inset Formula $\mu_{0}$
\end_inset

 с выборкой: 
\begin_inset Formula 
\[
\gamma=\P(c_{1}<T<c_{2})=\P\left(c_{1}<\sqrt{n}\frac{(\bar{\mathbf{x}}-\mu_{0})}{\sigma}<c_{2}\right)=\P\left(\mu_{0}\in\left(\bar{\mathbf{x}}-\frac{\sigma c_{2}}{\sqrt{n}},\bar{\mathbf{x}}-\frac{\sigma c_{1}}{\sqrt{n}}\right)\right).
\]

\end_inset

 Решений уравнения 
\begin_inset Formula $\P\left(c_{1}<\sqrt{n}(\bar{\mathbf{x}}-\mu_{0})/\sigma<c_{2}\right)=\Phi(c_{2})-\Phi(c_{1})=\gamma$
\end_inset

 бесконечно много.
 Чем 
\begin_inset Formula $\left[c_{1},c_{2}\right]$
\end_inset

 короче, тем лучше.
 Поскольку 
\begin_inset Formula $\Phi$
\end_inset

 симметрична и унимодальна, 
\begin_inset Formula 
\[
\begin{aligned}c_{1}=-c_{\gamma}\\
c_{2}=c_{\gamma},
\end{aligned}
\quad\text{где }c_{\gamma}=\cdf_{\N(0,1)}^{-1}\left(\gamma+\frac{1-\gamma}{2}\right)=x_{\frac{1+\gamma}{2}}.
\]

\end_inset


\begin_inset Note Comment
status open

\begin_layout Plain Layout
Картиночка с нормальной плотностью и 
\begin_inset Formula $\gamma$
\end_inset

 в серединке
\end_layout

\end_inset

 Наконец, 
\begin_inset Formula 
\[
\P\left(\mu_{0}\in\left(\bar{\mathbf{x}}\pm\frac{\sigma}{\sqrt{n}}x_{\frac{1+\gamma}{2}}\right)\right)=\gamma.
\]

\end_inset


\end_layout

\begin_layout Itemize
Пусть 
\begin_inset Formula $\sigma^{2}$
\end_inset

 неизвестно.
 По аналогии, 
\begin_inset Formula 
\[
\gamma=\P\left(c_{1}<\frac{\sqrt{n-1}(\bar{\mathbf{x}}-\mu_{0})}{s}<c_{2}\right)=\P\left(\mu_{0}\in\left(\bar{\mathbf{x}}\pm\frac{c_{\gamma}s}{\sqrt{n-1}}\right)\right),\quad c_{\gamma}=\cdf_{\t(n-1)}^{-1}\left(\frac{1+\gamma}{2}\right)
\]

\end_inset

 и 
\begin_inset Formula 
\[
\P\left(\mu_{0}\in\left(\bar{\mathbf{x}}\pm\frac{\tilde{s}}{\sqrt{n}}x_{\frac{1+\gamma}{2}}\right)\right)=\gamma.
\]

\end_inset


\end_layout

